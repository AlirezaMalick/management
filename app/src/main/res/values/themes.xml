<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--    <style name="Theme.Mangement" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <style name="Theme.Mangement" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Mangement.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mangement.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Mangement.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button.Tinted" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/bg_done_auth</item>
        <item name="android:textColor">?titleTextColor</item> </style>


    <style name="AuthBotton" parent="Widget.AppCompat.Button.Borderless">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="background">@drawable/bg_btn_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>


    </style>
</resources>